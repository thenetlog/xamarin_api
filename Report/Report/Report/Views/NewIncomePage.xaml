<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Report.Views.NewIncomePage">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">

            <Label Text="IncomeId" FontSize="Medium" />
            <Editor Text="{Binding Income.IncomeId }" FontSize="Medium" Margin="0" Keyboard="Numeric" />

            <Label Text="DonarName" FontSize="Medium" />
            <Editor Text="{Binding Income.DonarName }" FontSize="Medium" Margin="0" />
            
            <Label Text="Amount" FontSize="Medium" />
            <Editor Text="{Binding Income.Amount }" FontSize="Medium" Margin="0" Keyboard="Numeric" />
            
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>